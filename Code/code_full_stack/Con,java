package org.MY_APP.User_Interface;

import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextArea;
import javafx.scene.control.TextField;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.FlowPane;
import javafx.scene.layout.VBox;


import javafx.stage.Stage;
import org.MY_APP.Model.Actor;
import org.MY_APP.Model.Director;
import org.MY_APP.Model.Movie;
import org.MY_APP.Services.MovieService;

import java.net.URL;
import java.util.List;

public class CineMatchController {

    @FXML private TextField searchField;
    @FXML private FlowPane resultFlowPane;

    @FXML private Label detailsTitle;
    @FXML private Label detailsSubtitle;
    @FXML private Label detailsExtra;
    @FXML private TextArea detailsArea;

    @FXML private Button trailerBtn;
    private String currentTrailerUrl;

    private MovieService movieService;

    public void setMovieService(MovieService movieService) {
        this.movieService = movieService;
    }

    // =====================================
    // SEARCH
    // =====================================
    @FXML
    private void onSearch() {
        String query = searchField.getText().trim();
        if (query.isEmpty()) return;

        resultFlowPane.getChildren().clear();

        List<Movie> movies = movieService.searchMovies(query);
        List<Actor> actors = movieService.searchActors(query);
        List<Director> directors = movieService.searchDirectors(query);

        movies.forEach(this::addMovieCard);
        actors.forEach(this::addActorCard);
        directors.forEach(this::addDirectorCard);
    }

    // =====================================
    // MOVIE CARD
    // =====================================
    private void addMovieCard(Movie movie) {
        VBox card = makeCard(movie.getPosterPath(), movie.getTitle(), "Movie");

        card.setOnMouseClicked(e -> showMovieDetails(movie));

        resultFlowPane.getChildren().add(card);
    }

    private void showMovieDetails(Movie movie) {
        detailsTitle.setText(movie.getTitle());
        detailsSubtitle.setText("Release: " + movie.getReleaseDate());
        detailsExtra.setText("Rating: " + movie.getVoteAverage());
        detailsArea.setText(movie.getOverview());
    }

    // =====================================
    // ACTOR CARD
    // =====================================
    private void addActorCard(Actor actor) {
        VBox card = makeCard(actor.getProfilePath(), actor.getName(), "Actor");

        // FIX â†’ getActorDetails returns Optional<Actor>
        card.setOnMouseClicked(e -> {
            movieService.getActorDetails(actor.getId())
                    .ifPresent(this::showActorDetails);
        });

        resultFlowPane.getChildren().add(card);
    }

    private void showActorDetails(Actor actor) {
        detailsTitle.setText(actor.getName());
        detailsSubtitle.setText("Birthday: " + actor.getBirthday());
        detailsExtra.setText("Popularity: " + actor.getPopularity());
        detailsArea.setText(actor.getBiography());
    }
